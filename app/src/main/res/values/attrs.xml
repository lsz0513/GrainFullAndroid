<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 竖向自动滚动的View,类似淘宝首页(old) -->
    <declare-styleable name="VerticalScrollLayout">
        <attr name="vsl_animDuration" format="integer" />
        <attr name="vsl_sleepTime" format="integer" />
        <attr name="vsl_isCusDuration" format="boolean" />
    </declare-styleable>

    <!-- 抽奖转盘数据 -->
    <string-array name="LotteryTurntable">
        <item>角色</item>
        <item>体育</item>
        <item>方块</item>
        <item>行动</item>
        <item>搏斗</item>
        <item>字母</item>
    </string-array>

    <!--注意：pannum的数量一定要和names和icons的数量相同-->
    <declare-styleable name="TurntableView">
        <!--转盘的item数量-->
        <attr name="pannum" format="integer" />
        <!--转盘的item的文本-->
        <attr name="names" format="reference" />
        <!--转盘背景的颜色-->
        <attr name="colors" format="reference" />
        <!--控件宽占屏幕宽的比例-->
        <attr name="percentage" format="float" />
    </declare-styleable>

    <!-- DecisionActivity 晚餐食物 -->
    <string-array name="dinnerFoodName">
        <item>手擀面</item>
        <item>全鸡汉堡</item>
        <item>麻辣烫</item>
        <item>火锅</item>
        <item>烤肉拌饭</item>
        <item>过桥米线</item>
        <item>驴肉火烧</item>
        <item>家常菜</item>
    </string-array>

    <!-- DecisionActivity 早餐食物 -->
    <string-array name="breakfastFoodName">
        <item>小笼包</item>
        <item>豆浆油条</item>
        <item>胡辣汤</item>
        <item>米粥</item>
        <item>手抓饼</item>
        <item>里脊饼</item>
    </string-array>

    <!-- DecisionActivity 下午做什么 -->
    <string-array name="afternoonName">
        <item>读书学习</item>
        <item>打游戏</item>
        <item>约会</item>
        <item>逛街</item>
        <item>看电影</item>
    </string-array>

    <!-- DecisionActivity 掷个骰子 -->
    <string-array name="diceName">
        <item>.</item>
        <item>..</item>
        <item>...</item>
        <item>....</item>
        <item>.....</item>
        <item>......</item>
    </string-array>

    <!-- DecisionActivity 约会 -->
    <string-array name="appointmentName">
        <item>约</item>
        <item>不约</item>
    </string-array>

    <!-- DecisionActivity 游戏 -->
    <string-array name="gameName">
        <item>我的世界</item>
        <item>原神</item>
        <item>Dota</item>
        <item>英雄联盟</item>
        <item>多多自走棋</item>
        <item>和平精英</item>
    </string-array>

    <!-- DecisionActivity 默认颜色 -->
    <integer-array name="colors">
        <item>@color/btn_press_color</item>
        <item>@color/colorPrimary</item>
    </integer-array>

    <!-- 电子时钟 -->
    <declare-styleable name="ElecTimeNumView">
        <attr name="num" format="enum">
            <enum name="num0" value="0" />
            <enum name="num1" value="1" />
            <enum name="num2" value="2" />
            <enum name="num3" value="3" />
            <enum name="num4" value="4" />
            <enum name="num5" value="5" />
            <enum name="num6" value="6" />
            <enum name="num7" value="7" />
            <enum name="num8" value="8" />
            <enum name="num9" value="9" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ProgressLayout">
        <!-- 控件宽-->
        <attr name="progressLayout_width" format="dimension" />
        <!-- 控件高-->
        <attr name="progressLayout_height" format="dimension" />
        <!-- 外阴影宽度-->
        <attr name="progressLayout_outer_shader_width" format="dimension" />
        <!-- 圆环宽度-->
        <attr name="progressLayout_circle_stroke_width" format="dimension" />
        <!-- 是否是清洁模式-->
        <attr name="progressLayout_clean_mode" format="boolean" />
        <!-- 是否执行指针上浮的初始化动画 -->
        <attr name="progressLayout_init_anim" format="boolean" />
        <!-- 是否是保温模式-->
        <attr name="progressLayout_keep_ware_mode" format="boolean" />
    </declare-styleable>
</resources>