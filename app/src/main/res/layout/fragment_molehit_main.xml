<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txvi_molehitmain_count_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="剩余时间："
        android:textColor="#333333"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txvi_molehitmain_total_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:text=""
        android:textColor="#333333"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/lila_molehitmain_shadow_view"
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@drawable/shape_game_shadow"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="目标"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:src="@mipmap/img_sign_in_whack_mole_target" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="95dp"
        android:columnCount="3"
        android:rowCount="3">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

            <ImageView
                android:id="@+id/imvi_molehitmain_mole1"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_gravity="bottom|center_horizontal"
                android:scaleType="fitEnd" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_molehitmain_anim_view1"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_gravity="center_horizontal|top" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

