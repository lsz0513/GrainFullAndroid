<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_tab_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="1dp">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/view_hometabitemlayout_tabs"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/layout_bg_shape"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/common_text_color"
        app:tabIndicatorFullWidth="false"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/common_text_color" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_hometabitemlayout_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>


