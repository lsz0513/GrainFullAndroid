<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_color_code_conversion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg_color"
    android:orientation="vertical">

    <!-- 头部 -->
    <include
        android:id="@+id/view_colorcodeconversion_top"
        layout="@layout/comm_top_layout" />

    <androidx.cardview.widget.CardView
        android:id="@+id/view_colorcodeconversion_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- HEX -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="HEX"
                android:textColor="@color/rmb_dark_green_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_bg_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_colorcodeconversion_hex"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="#0123456789"
                    android:gravity="center_vertical"
                    android:hint="十六进制颜色值"
                    android:inputType="number"
                    android:maxLength="9"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/common_text_color"
                    android:textColorHint="@color/common_text_hint_color"
                    android:textSize="14sp" />

                <!-- 复制 -->
                <ImageView
                    android:id="@+id/btn_colorcodeconversion_copyhex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@mipmap/icon_copy" />
            </LinearLayout>


            <!-- RGB -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="RGB"
                android:textColor="@color/rmb_dark_green_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_bg_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_colorcodeconversion_rgb"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits=",0123456789"
                    android:gravity="center_vertical"
                    android:hint="RGB颜色值"
                    android:inputType="number"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/common_text_color"
                    android:textColorHint="@color/common_text_hint_color"
                    android:textSize="14sp" />

                <!-- 复制 -->
                <ImageView
                    android:id="@+id/btn_colorcodeconversion_copyrgb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@mipmap/icon_copy" />
            </LinearLayout>


            <!-- CMYK -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="CMYK"
                android:textColor="@color/rmb_dark_green_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_bg_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_colorcodeconversion_cmyk"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits=",0123456789"
                    android:gravity="center_vertical"
                    android:hint="CMYK颜色值"
                    android:inputType="number"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/common_text_color"
                    android:textColorHint="@color/common_text_hint_color"
                    android:textSize="14sp" />

                <!-- 复制 -->
                <ImageView
                    android:id="@+id/btn_colorcodeconversion_copycmyk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@mipmap/icon_copy" />
            </LinearLayout>


            <!-- HSV -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="HSV"
                android:textColor="@color/rmb_dark_green_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_bg_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_colorcodeconversion_hsv"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits=",0123456789"
                    android:gravity="center_vertical"
                    android:hint="HSV颜色值"
                    android:inputType="number"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/common_text_color"
                    android:textColorHint="@color/common_text_hint_color"
                    android:textSize="14sp" />

                <!-- 复制 -->
                <ImageView
                    android:id="@+id/btn_colorcodeconversion_copyhsv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@mipmap/icon_copy" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>