<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homecontent_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_background"
    android:orientation="horizontal">

    <!-- 图片 -->
    <ImageView
        android:id="@+id/imvi_homecontentitemlayout_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_dailycare_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 名称 -->
    <TextView
        android:id="@+id/txvi_homecontentitemlayout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="店铺名称"
        android:textColor="@color/home_location_text_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/imvi_homecontentitemlayout_logo"
        app:layout_constraintRight_toRightOf="@+id/imvi_homecontentitemlayout_logo"
        app:layout_constraintTop_toBottomOf="@+id/imvi_homecontentitemlayout_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>